@using TallyJ3.Code.Helper
@using Microsoft.AspNetCore.Mvc.Razor
@{
  var page = (IRazorPage)ViewData["Page"];
}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - TallyJ</title>
 
  @Html.Partial("_LayoutHeaders")
  @RenderSection("Head", required: false)
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a asp-page="/Index" class="navbar-brand">TallyJ3</a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a asp-page="/Index">Home</a></li>
          <li><a asp-page="/Teller/Reports">Reports</a></li>
          <li><a asp-page="/About">About</a></li>
          <li><a asp-page="/Contact">Contact</a></li>
        </ul>
        @await Html.PartialAsync("_LoginPartial")
      </div>
    </div>
  </nav>
  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; 2017 - TallyJ3 - Version <span class="Version" title="@Startup.Configuration["TallyJVersion:Date"]">@Startup.Configuration["TallyJVersion:Code"]</span></p>
    </footer>
  </div>

  @Html.Partial("_LayoutFooters")
  @RenderSection("Scripts", required: false)
  @FileLinking.AddAssociatedJsTag(page)
  @ContextItems.GetJavascriptForPage()

</body>
</html>
